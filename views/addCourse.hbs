<div class="row">
    <main class="col-md-12">

        <br/>
        <form action="/courses/add" method="POST">
            <fieldset>
                <legend>Course Information</legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="courseCode">Course Code</label>
                            <input class="form-control" id="courseCode" name="courseCode" type="text" />
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">
                            <label for="courseDescription">Course Description</label>
                            <input class="form-control" id="courseDescription" name="courseDescription" type="text"/>
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <button class="btn btn-primary float-right">Add Course</button>
        </form>

    </main>
</div>